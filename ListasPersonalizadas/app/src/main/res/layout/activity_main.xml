<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kryzcorp.listaspersonalizadas.MainActivity">

    <Button
        android:id="@+id/btn_mascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:text="Mascotas" />

    <Button
        android:id="@+id/btn_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_mascota"
        android:layout_alignRight="@+id/btn_mascota"
        android:layout_below="@+id/btn_mascota"
        android:layout_marginTop="29dp"
        android:text="Autos" />

    <Button
        android:id="@+id/btn_persona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_auto"
        android:layout_alignRight="@+id/btn_auto"
        android:layout_below="@+id/btn_auto"
        android:layout_marginTop="37dp"
        android:text="Personas" />

    <Button
        android:id="@+id/btn_call_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_mascota"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_mascota"
        android:layout_marginBottom="61dp"
        android:text="Other" />
</RelativeLayout>
