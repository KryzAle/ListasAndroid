<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="134dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:text="Enviar" />

    <Button
        android:id="@+id/btn_llamada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_mensaje"
        android:layout_alignBottom="@+id/btn_mensaje"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:layout_toLeftOf="@+id/btn_mensaje"
        android:layout_toStartOf="@+id/btn_mensaje"
        android:text="Llamar" />

    <EditText
        android:id="@+id/txt_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:contentDescription="Numero"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txt_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_numero"
        android:layout_alignStart="@+id/txt_numero"
        android:layout_below="@+id/txt_numero"
        android:layout_marginTop="66dp"
        android:contentDescription="mensaje"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_numero"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_numero"
        android:layout_marginTop="37dp"
        android:text="Numero" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_mensaje"
        android:layout_alignStart="@+id/txt_mensaje"
        android:layout_below="@+id/txt_numero"
        android:layout_marginTop="28dp"
        android:text="Mensaje" />
</RelativeLayout>